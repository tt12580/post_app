<div class="row">
  <aside class="col-md-6 col-md-offset-3">
    <section class="user_info">
        <ol class="microposts">
          <li>
            <%= link_to gravatar_for(current_user, size: 60), current_user %>
            <span class="user">
              <%= current_user.name %>
            </span>
            <span class="content">
              <%= link_to "view my profile", current_user %>
            </span>
            <span class="content">
              <%= pluralize(current_user.microposts.count, "micropost") %>
            </span>
          </li>
        </ol>
    </section>
  </aside>
</div>
